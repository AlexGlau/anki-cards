{
  "env": {
    "es2021": true,
    "browser": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": ["warn"],
    "no-extra-semi": ["warn"],
    "curly": ["error", "all"],
    "no-global-assign": ["error"],
    "no-fallthrough": ["error"],
    "arrow-spacing": ["error"],
    "arrow-parens": ["error", "as-needed"],
    "arrow-body-style": ["error", "always"],
    "space-infix-ops": ["error"],
    "space-before-blocks": ["error"],
    "semi-style": ["error"],
    "semi-spacing": ["error"],
    "comma-spacing": ["error"]
  }
}
